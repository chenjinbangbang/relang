.search-wrap {
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  height: 90rpx;
  color: #fff;
  background: #fdb02f;
}

.search {
  flex-grow: 1;
  margin: 15rpx 24rpx;
}

.scroll-view {
  padding-top: 92rpx;
}

.goods-list, .goods-list .top {
  position: relative;
}

.goods-list .top image {
  width: 100%;
  height: 300rpx;
  display:block;
}

.goods-list .top .time {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  font-size: 26rpx;
  padding: 14rpx;
  color: white;
  /* border:1px solid #f00; */
  box-sizing: border-box;
  /* background-color: rgba(254, 76, 54, 0.8); */
  background-color: rgba(253, 176, 47, 0.7);
}

.goods-list .bottom {
  padding: 4rpx 16rpx;
}

.name{ color:#666; }

.price-content {
  overflow: hidden;
}

.price-content .status {
  float: right;
  margin-bottom: 6px;
  padding: 2px 10px;
  border-radius:4rpx;
}

.price-content .status, .price-content .status.ready, .price-content .status.end {
  background-color: #ccc;
  color: white;
}

.price-content .status.start {
  background-color: red;
  color: white;
}

.now-price-pre {
  color: red;
  font-size: 12px;
}

.now-price {
  color: red;
  font-size: 16px;
}

.old-price-pre {
  color: #888;
  font-size: 10px;
  margin-left: 8px;
}

.old-price {
  color: #888;
  font-size: 12px;
}

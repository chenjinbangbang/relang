swiper-item image {
  width: 100%;
}

.goods {
  margin-top: 0;
  border-top: none;
}

.goods .name {
  display: block;
  font-size: 18px;
  color: black;
}

.goods .price-content .pre {
  font-size: 14px;
  color: red;
}

.goods .price-content .price {
  font-size: 22px;
  color: red;
}

.goods .price-content .last-num {
  margin-left: 10px;
}

.shop-content {
  padding: 6px 0 6px 15px;
  margin-bottom: 10px;
}

.shop-opt {
  float: right;
}

.shop-opt icon {
  font-size: 22px;
  color: #479de6;
  padding: 4px 14px;
  border-left: 1rpx solid #c8c7cc;
}

.shop-info {
  overflow: hidden;
}

.shop-info .name {
  display: block;
  font-size: 14px;
  color: #555;
}

.shop-info .address {
  display: block;
  font-size: 12px;
  color: #888;
}

.nav {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.btn-submit {
  border: none;
  border-radius: 0;
}

.goods-detail {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 50px;
}

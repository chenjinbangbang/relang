.detail {
  height: 100%;
  background-color: #fdb02f;
  padding-top: 100rpx;
}

.detail-home {
  width: 95%;
  margin: auto;
  box-sizing: border-box;
  padding: 80rpx 30rpx 30rpx 30rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 10rpx;
}

.company {
  color: #999;
  font-size: 34rpx;
}

.title {
  margin: 20rpx 0;
  font-size: 38rpx;
}

.verify_code {
  color: #999;
  font-size: 34rpx;
  margin-bottom: 80rpx;
}

.form {
}

.form .section {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  height: 100rpx;
  text-align: left;
  border-bottom: 1rpx solid #eee;
}

.section__title {
  width: 180rpx;
  color: #999;
}

.btn-area {
  margin:40rpx 0 20rpx 0;
}

.btn-area button {
  background-color: #fdb02f;
  color:#fff;
  height:90rpx;
  line-height:90rpx;
}
